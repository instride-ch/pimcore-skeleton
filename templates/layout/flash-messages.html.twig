{% for type, messages in app.flashes(['info', 'success', 'warning', 'error']) %}
    {% for message in messages %}
        <div class="uk-alert uk-alert-{{ type }}" data-uk-alert>
            <a class="uk-icon uk-close uk-alert-close" data-uk-close></a>
            <p>{{ message|raw }}</p>
        </div>
    {% endfor %}
{% endfor %}
